<div id="content-header" data-hook="">
	<div class="container">
		<div class="sixteen columns">
			<div class="block-table">
				<% content_for :page_title do %>
					<%= I18n.t(:listing_newsletter_subscribers) %>
				<% end %>				
				<% content_for :page_actions do %>
					<li id="new_newsletter_subscriber_link">
						<%= button_link_to I18n.t(:new_newsletter_subscriber), new_object_url, { :remote => true, :icon => 'icon-plus', :id => 'admin_new_newsletter_subscriber' } %>
					</li>
				<% end %>
			</div>
		</div>
	</div>
</div>

<h1><%= t(:newsletter_subscribers) %></h1>
<table class="index">
  <thead>
    <tr data-hook="categories_header">
      <th><%= t(:email) %></th>
      <th><%= t(:action) %></th>
    </tr>
  </thead>
  <tbody>
    <% @newsletter_subscribers.each do |newsletter_subscriber|%>
    <tr id="<%= spree_dom_id newsletter_subscriber %>" data-hook="newsletter_subscriber_row">
      <td style="width:350px;"><%= newsletter_subscriber.email %></td>
      <td>
        <%= link_to_edit newsletter_subscriber %> &nbsp;
        <%= link_to_delete newsletter_subscriber %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
